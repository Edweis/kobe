{{#> body }}
<script>
  function requestName(event){
    const name = prompt('New project name');
    if(name==null) return event.preventDefault()
    document.querySelector('input[name=name]').value = name
  }
</script>

<h1>Kobe</h1>
<ul class="list-disc pl-6">
  {{#each projects}}
  <li>
    <a href="project/{{this.id}}" class="link block">
      <h3>{{this.name}}</h3>
    </a>
  </li>
  {{/each}}
</ul>
<form action="/project" method="post" onsubmit="requestName(event)">
  <input name="name" type="hidden"/>
  <button class="absolute right-4 bottom-4 btn btn-lg btn-primary btn-circle">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
  </button>
</form>
{{/body}}