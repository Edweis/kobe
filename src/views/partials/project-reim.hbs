      <span class="text-sm">owes</span>
      <span class="text-xl text-primary font-semibold">{{this.from}}</span>
    </div>
    <div class="text-xl text-primary">
      {{this.amount}}
    </div>
  </article>
  <hr class=""></hr>
  {{/each}}
