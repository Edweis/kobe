<script>
  function requestName(event){
    const name = prompt('New participant name')
    if(name==null) return event.preventDefault();
    document.querySelector('input[name=participant]').value = name
  }
</script>

<header>
  <h1>Reimburse</h1>
  <span>{{project.name}}</span>
</header>
<nav>
  <a href="/project/{{project.id}}">Back</a>
  <a href="/project/{{project.id}}/balance">Balance</a>
  <a href="/project/{{project.id}}/settings">Settings</a>
</nav>
<div class="grid gap-4">
  {{#each balance}}
